<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:background="@drawable/shape_gradle_yuanhuan"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_rotate_view"
                android:layout_width="@dimen/x34"
                android:layout_height="@dimen/y34"
                android:src="@drawable/img_gradle_graess"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:gravity="center"
            android:maxEms="1"
            android:lineSpacingExtra="@dimen/y3"
            android:lineSpacingMultiplier="0.8"
            android:text="内容"
            android:textColor="#252525"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>